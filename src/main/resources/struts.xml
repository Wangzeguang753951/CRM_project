<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <!--设置为开发模式,log日志会多一些-->
    <constant name="struts.devMode" value="true"/>
    <!--让Spring管理Action对象的创建-->
    <!--当然,这个配置可以不写 因为在Struts2-Spring-plugin里面已经有了-->
    <constant name="struts.objectFactory" value="spring"/>

    <!--配置拦截器-->
    <package name="base" extends="json-default">

        <interceptors>
            <interceptor name="loginInterceptor" class="com.wzg.ssh.staff.web.interceptor.LoginInterceptor">
                <param name="excludeMethods">login</param>
            </interceptor>
            <interceptor-stack name="crmInterceptorStack">
                <interceptor-ref name="loginInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="crmInterceptorStack"/>

    </package>



   <package name="com.wzg.ssh.staff.web.action." extends="base">
    <!--插入员工信息的Action-->
       <action name="saveStaff" class="staffAction" method="saveStaff">
           <result name="success">/pages/staff/listStaff.jsp</result>
       </action>

       <action name="login" class="staffAction" method="login">
           <result name="success">/pages/frame.jsp</result>
           <result name="input">/pages/login.jsp</result>

       </action>
       <action name="saveDept" class="com.wzg.ssh.staff.web.action.DeptAction" method="saveDept">
           <result name="success">/pages/department/listDepartment.jsp</result>
       </action>


   </package>




</struts>
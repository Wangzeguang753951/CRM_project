<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.wzg.ssh.staff.domain">
    <!--创建员工信息表-->
    <class name="Post" table="crm_post">
        <id name="id" column="post_Id">
            <generator class="native"/>
        </id>
        <property name="postName"/>

        <!--设置多对一部门-->
        <many-to-one name="dept" class="Department" column="dept_Id" cascade="save-update"/>

        <!--设置一对多员工-->
        <set name="staffs" table="crm_staff" inverse="true">
            <key column="post_Id"/>
            <one-to-many class="Staff"/>
        </set>

    </class>
</hibernate-mapping>